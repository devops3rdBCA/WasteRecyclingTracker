# Environment Variables Template
# Copy this file to .env and fill in the actual values for your deployment

# ========== DATABASE CONFIGURATION ==========
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waste_recycling_db
DB_USER=wrt_user
DB_PASSWORD=your-secure-database-password

# ========== BACKEND SERVER ==========
API_HOST=localhost
API_PORT=8081
SERVER_SSL_ENABLED=false
ADMIN_PASSWORD=admin123

# ========== FRONTEND CONFIGURATION ==========
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENVIRONMENT=production

# ========== CORS CONFIGURATION ==========
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========== SECURITY ==========
JWT_SECRET=your-very-long-jwt-secret-key-minimum-32-characters
JWT_EXPIRATION_MS=86400000

# ========== SMTP/EMAIL CONFIGURATION ==========
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@yourdomain.com

# ========== SSL/TLS CERTIFICATES ==========
SSL_KEYSTORE_PATH=/etc/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password
SSL_KEYSTORE_ALIAS=tomcat

# ========== LOGGING ==========
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/wrt/application.log

# ========== MONITORING & APM ==========
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn

# ========== AWS CONFIGURATION (if deploying to AWS) ==========
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BACKUP_BUCKET=your-s3-backup-bucket-name

# ========== DEPLOYMENT PLATFORM ==========
# Options: heroku, aws-ec2, azure, docker, local
DEPLOYMENT_PLATFORM=heroku

# ========== FEATURE FLAGS ==========
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_BACKUP_ENABLED=true
FEATURE_RATE_LIMITING=true
